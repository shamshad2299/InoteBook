

{
  "version": 2,
  "builds": [
    { "src": "Frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "Backend/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "Backend/$1.js" },
    { "src": "/(.*)", "dest": "Frontend/$1" }
  ]
}

